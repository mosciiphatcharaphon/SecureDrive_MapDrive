<Window x:Class="SecureDrive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureDrive"
        mc:Ignorable="d"
        Height="450" Width="800" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="0" HorizontalAlignment="Center">
            <Grid>

                <!-- Custom Title Bar -->
                <Border Background="#CCF0FF" Height="50" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown" CornerRadius="10,10,0,0">
                    <Grid Margin="10,1,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/securedrive_logo_new.ico" Width="40" Height="40" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Configuration" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <Button Grid.Column="4" Content="X" Width="40" Height="40"
                                VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent"
                                Foreground="Black" Click="CloseButton_Click"/>
                    </Grid>
                </Border>

                <!-- ส่วนข้อความ error -->
                <TextBlock x:Name="GeneralErrorText"
                           Text="เกิดข้อผิดพลาด กรุณาตรวจสอบ Login หรือ Password"
                           Foreground="Red"
                           Visibility="Collapsed"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,70,0,0"/>

                <!-- Main Content -->
                <Grid Margin="0,100,0,38">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Login -->
                    <StackPanel Orientation="Vertical" Margin="200,20,200,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Login" Grid.Column="0" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox x:Name="LoginTextBox" Grid.Column="1" Width="300" Height="40" FontSize="16" VerticalContentAlignment="Center" TextChanged="LoginTextBox_TextChanged" />
                        </Grid>
                        <TextBlock x:Name="LoginErrorText" Text="กรุณากรอก Login" FontSize="14" Foreground="Red" Visibility="Collapsed" Margin="100,0,0,0" />
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Orientation="Vertical" Grid.Row="1" Margin="200,20,200,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Password" Grid.Column="0" FontSize="16" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="PasswordBox" Grid.Column="1" Width="300" Height="40" FontSize="16" VerticalContentAlignment="Center" PasswordChanged="PasswordBox_PasswordChanged" />
                        </Grid>
                        <TextBlock x:Name="PasswordErrorText" Text="กรุณากรอก Password" FontSize="14" Foreground="Red" Visibility="Collapsed" Margin="100,0,0,0" />
                    </StackPanel>

                    <!-- Checkboxes -->
                    <StackPanel Grid.Row="2" Margin="300,20,200,60" Grid.RowSpan="2">
                        <CheckBox x:Name="AutoMountCheckBox" Content="Auto-mount drive" FontSize="16" Margin="0,5" IsChecked="True"/>
                        <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start with Windows" FontSize="16" Margin="0,5" IsChecked="True"/>
                    </StackPanel>

                    <!-- Save Button -->
                    <Button Grid.Row="3" Content="Save" Width="100" Height="40" 
                            Background="#007DBF" Foreground="White" FontWeight="Bold"
                            HorizontalAlignment="Right" Margin="0,140,50,-37" FontSize="16"
                            Click="SaveButton_Click"/>
                </Grid>
            </Grid>
        </Border>

        <Grid x:Name="PopupContainer" Visibility="Collapsed" Background="#80000000" />
    </Grid>
</Window>
