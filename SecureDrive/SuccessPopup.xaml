<UserControl x:Class="SecureDrive.SuccessPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="100">
    <Border Background="#CCFFCC" CornerRadius="10" BorderBrush="Green" BorderThickness="2" Padding="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="MessageTextBlock" Text="Success!" 
                       FontSize="16" Foreground="Green" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
